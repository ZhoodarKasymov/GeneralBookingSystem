@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<BookingQueue.Common.Models.Company.Company>

@{
    ViewData["Title"] = "Компании";
}

<div class="mb-3">
    <h4>
        <bold>@ViewData["Title"]</bold>
    </h4>
</div>
<hr>

<div class="g-3 mt-3">
    <h5 class="mt-5">
        <bold>Выберите компанию</bold>
    </h5>

    <div class="row">
        @foreach (var company in Model)
        {
            <div class="mt-3 col-12 col-md-3">
                <a asp-controller="Branch" asp-action="GetBranches" asp-route-companyId="@company.Id" class="service_card link-div p-4">
                    <div class="d-flex align-items-center">
                        <td><img src="@company.IconPath" alt="Icon" style="margin-right: 5px; height: 50px; width: 50px;"></td>
                        <p class="mb-0 mt-0">@company.Name</p>
                    </div>
                </a>
            </div>
        }
    </div>
</div>